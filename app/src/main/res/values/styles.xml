<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textAppearance">@style/TextAppearance.Custom</item>
<!--		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>-->
	</style>
	<style name="AppTheme.Fullscreen" parent="android:Theme.Material.NoActionBar.Fullscreen" >
		<item name="android:colorPrimary">@color/colorPrimary</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="android:colorAccent">@color/colorAccent</item>
		<item name="android:textAppearance">@style/TextAppearance.Custom</item>
		<item name="android:textColorHint">@color/colorHint</item>
		<item name="android:buttonStyle">@style/ButtonAppearance</item>
	</style>
	<style name="TextAppearance.Custom" parent="android:TextAppearance">
		<item name="android:fontFamily">@font/raleway_light</item>
		<item name="android:textColor">@color/colorPrimaryDark</item>
		<item name="android:paddingEnd">@dimen/et_padding_start</item>
		<item name="android:paddingStart">@dimen/et_padding_start</item>
		<item name="android:paddingTop">@dimen/et_padding_top</item>
		<item name="android:paddingBottom">@dimen/et_padding_top</item>
	</style>
	<style name="ButtonAppearance" parent="Widget.AppCompat.Button">
		<item name="android:textAppearanceButton">@style/TextAppearance.Custom</item>
		<item name="android:textColor">@color/colorPrimaryDark</item>
		<item name="android:paddingEnd">@dimen/button_padding_start</item>
		<item name="android:paddingStart">@dimen/button_padding_start</item>
		<item name="android:paddingTop">@dimen/button_padding_top</item>
		<item name="android:paddingBottom">@dimen/button_padding_top</item>
	</style>
<style name="LabelStyle" parent="TextAppearance.AppCompat.Small">
	<item name="android:textColor">@color/colorTextDark</item>
	<item name="android:fontFamily">@font/raleway_light</item>

</style>


</resources>
