<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/tvLoanType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/montserrat"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivClose" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_round_corners_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLoanType">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/loan_amount_label"
            android:textAppearance="@style/TextAppearance.Custom"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLoanAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/sample_loan_amount"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tvLabel"
            app:layout_constraintStart_toStartOf="@+id/tvLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvLabel" />

        <TextView
            android:id="@+id/tvLabelInterest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="@string/interest_amount_label"
            android:textAppearance="@style/TextAppearance.Custom"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/tvLoanAmount"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/tvLoanAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvLoanAmount" />

        <TextView
            android:id="@+id/tvInterestAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/sample_interest"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tvLabelInterest"
            app:layout_constraintHorizontal_bias="0.397"
            app:layout_constraintStart_toStartOf="@+id/tvLabelInterest"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelInterest" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/sample_loan_total"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvLabelTotal"
            app:layout_constraintHorizontal_bias="0.357"
            app:layout_constraintStart_toStartOf="@+id/tvLabelTotal"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelTotal"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvLabelTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="@string/total_amount_label"
            android:textAppearance="@style/TextAppearance.Custom"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/tvInterestAmount"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="@+id/tvInterestAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvInterestAmount" />

        <TextView
            android:id="@+id/tvInstallment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/sample_loan_installment"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvLabelTotal"
            app:layout_constraintStart_toStartOf="@+id/tvLabelTotal"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelInstallment"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvLabelInstallment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="@string/installment_amount_label"
            android:textAppearance="@style/TextAppearance.Custom"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/tvTotalAmount"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvInterestAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalAmount" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="@string/confirm"
        app:layout_constraintEnd_toEndOf="@+id/clSummary"
        app:layout_constraintStart_toStartOf="@+id/clSummary"
        app:layout_constraintTop_toBottomOf="@+id/clSummary" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_close_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
